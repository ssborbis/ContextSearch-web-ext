{
	"manifest_version": 2,
	"name": "ContextSearch web-ext",
	"description": "__MSG_extensionDescription__",
	"version": "1.13",
	"homepage_url": "https://github.com/ssborbis/ContextSearch-web-ext",
	"default_locale": "en",
	
	"applications": {
		"gecko": {
			"id": "{5dd73bb9-e728-4d1e-990b-c77d8e03670f}",
			"strict_min_version": "57.0"
		}
	},

	"background": {
		"scripts": [
			"lib/browser-polyfill.min.js",
			"lib/crossbrowser.js",
			"opensearch.js",
			"lib/encoding-indexes.js",
			"lib/encoding.js",
			"defaultEngines.js",
			"bookmarks.js",
			"background.js",
			"searchEngineUtils.js",
			"mozlz4.js",
			"keyTable.js",
			"nodes.js"
		]
	},

	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": [
				"lib/browser-polyfill.min.js",
				"lib/crossbrowser.js",
				"lib/mark.es6.min.js",
				"dock.js",
				"inject.js",
				"opensearch.js",
				"searchEngineUtils.js",
				"inject_quickmenu.js",
				"inject_customSearch.js",
				"inject_sidebar.js",
				"inject_highlight.js",
				"hotkeys.js"
			],
			"css": ["inject.css","inject_sidebar.css"],
			"all_frames": true,
			"match_about_blank": false
		}
	],
	
	"permissions": [
		"<all_urls>",
		"activeTab",
		"contextMenus",
		"storage",
		"tabs",
		"search"
	],
	
	"optional_permissions": [
		"bookmarks"
	],
	
	"icons": {
		"48": "icons/icon48-2.png"
	},
	
	"web_accessible_resources": [
		"/quickmenu.html",
		"/customSearch.html",
		"/searchbar.html",
		"/findbar.html",
		"icons/search.svg",
		"icons/crossmark.svg",
		"icons/vertical.svg",
		"icons/alert.png"
	],

	"browser_action": {
		"default_title": "ContextSearch",
		"default_icon": "icons/icon48.png"
	},
	
	"sidebar_action": {
		"default_icon": {
			"32": "icons/icon48-2.png"
		},
		"default_title": "ContextSearch web-ext",
		"default_panel": "blank.html",
		"open_at_install": false
	},
	
	"page_action": {
		"browser_style": true,
		"default_icon": "icons/highlight.svg",
		"default_title": "Clear highlighting"
	}
}